@model FourthStar1.Models.ViewModels.DrillCategory

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Drill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Drill.DrillName" class="control-label"></label>
                <input asp-for="Drill.DrillName" class="form-control" />
                <span asp-validation-for="Drill.DrillName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drill.DrillDescription" class="control-label"></label>
                <input asp-for="Drill.DrillDescription" class="form-control" />
                <span asp-validation-for="Drill.DrillDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drill.PlayersRequired" class="control-label"></label>
                <input asp-for="Drill.PlayersRequired" class="form-control" />
                <span asp-validation-for="Drill.PlayersRequired" class="text-danger"></span>
            </div>

            @* the below is modeled after studentexercisesEF from C29 repo, i want a dropdown option to categorize drills*@
            @*<div class=“form-group”>
                
                <label asp-for=“CategoryOptions” class=“control-label”></label>
                <select asp-for=“CategoryOptions” class=“form-control” asp-items=“ViewBag.CategoryId”></select>
            </div>*@

            <div class="form-group">
                <label asp-for="CategoryOptions" class="control-label"></label>
                <select asp-for="Drill.CategoryId" class="form-control" asp-items="@Model.CategoryOptions"></select>
                <span asp-validation-for="CategoryOptions" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Drill.DateCreated" class="control-label"></label>
                <input asp-for="Drill.DateCreated" class="form-control" />
                <span asp-validation-for="Drill.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
